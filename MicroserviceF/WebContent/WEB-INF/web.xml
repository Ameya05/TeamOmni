<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
<display-name>MicroserviceF</display-name>
	<servlet>
		<servlet-name>storm-forecast</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
		  <param-name>jersey.config.server.provider.packages</param-name>
		  <param-value>org.team.omni.weather.service</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>storm-forecast</servlet-name>
		<url-pattern>/forecast/*</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>zookeeper</param-name>
		<param-value>ec2-54-70-147-185.us-west-2.compute.amazonaws.com:2181</param-value>
	</context-param>
	<listener>
		<listener-class>org.team.omni.weather.ForecastAppContextListener</listener-class>
	</listener>
</web-app>

